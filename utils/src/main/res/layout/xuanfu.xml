<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/auth_btn_close"
        android:id="@+id/close_xuanfu"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView_xuanfu"
        android:layout_toEndOf="@+id/imageView_xuanfu"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/icon2"

        android:id="@+id/imageView_xuanfu"
        android:layout_below="@+id/close_xuanfu"
        android:layout_alignRight="@+id/textView_xuanfu"
        android:layout_alignEnd="@+id/textView_xuanfu"/>
    <TextView
        android:id="@+id/textView_xuanfu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我是悬浮窗"
        android:layout_below="@+id/imageView_xuanfu"
       />
</RelativeLayout>